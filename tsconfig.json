{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./typings"
    ],
    "types": [
      "vue-typescript-import-dts"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "front-end/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
